                                <Rectangle Width="22"
                    		Height="19"
                    		Fill="#FF3373F2">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill"
                    				Visual="{StaticResource appbar_refresh}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Button>
