                        <ColumnDefinition Width="351*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Margin="5,10,10,5" Header="Files">
